<!-- 
   teb_local_planner, modelled after robot_carlike tutorial
  - stage
  - map_server
  - move_base
  - static map
 -->
<launch>

        <!--  ************** Global Parameters ***************  -->
        <param name="/use_sim_time" value="true"/>


        <!--  ************** Navigation ***************  -->
	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
  	  	<rosparam file="../cfg/carlike/costmap_common_params.yaml" command="load" ns="global_costmap" />
  	 	<rosparam file="../cfg/carlike/costmap_common_params.yaml" command="load" ns="local_costmap" />
  		<rosparam file="../cfg/carlike/local_costmap_params.yaml" command="load" />
  		<rosparam file="../cfg/carlike/global_costmap_params.yaml" command="load" />
  		<rosparam file="../cfg/carlike/teb_local_planner_params.yaml" command="load" />

		<param name="base_global_planner" value="global_planner/GlobalPlanner" />
		<param name="planner_frequency" value="1.0" />
		<param name="planner_patience" value="5.0" />

		<param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
		<param name="controller_frequency" value="5.0" />
		<param name="controller_patience" value="15.0" />

                <param name="clearing_rotation_allowed" value="false" /> <!-- Our carlike robot is not able to rotate in place -->
	</node>

	<!--  ****** Conversion from cmd_vel to AckermannDrive *****  -->
        <node pkg="ocrl" name="cmd_vel_to_ackermann_drive" type="cmd_vel_to_ackermann_drive.py" output="screen">
        </node>



	<!--  ****** Maps *****  -->
	<node name="map_server" pkg="map_server" type="map_server" args="$(find ocrl)/maps/map.yaml" output="screen">
                <param name="frame_id" value="map"/>
	</node>


	  <!--  **************** Visualisation ****************  -->
	  <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d ../cfg/rviz_navigation.rviz"/> -->

</launch>
